%div.shared-links
	- if controller_name != 'sessions'
		= link_to "Sign In", new_session_path(resource_name), class: 'shared-link'
		%br/

	- if devise_mapping.registerable? && controller_name != 'registrations' 
		= link_to "Sign Up", new_registration_path(resource_name), class: 'shared-link' 
		%br/

	- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' 
		= link_to "Forgotten pasword?", new_password_path(resource_name), class: 'shared-link' 
		%br/

	- if devise_mapping.confirmable? && controller_name != 'confirmations' 
		= link_to "Haven't received confimation?", new_confirmation_path(resource_name), class: 'shared-link'
		%br/

	- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' 
		= link_to "Haven received instructions?", new_unlock_path(resource_name), class: 'shared-link'


	- if devise_mapping.omniauthable? 
		- resource_class.omniauth_providers.each do |provider| 
			= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'shared-link'
