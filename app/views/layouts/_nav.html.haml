%div.nav
  %div#navbar
    %div.nav-left
      = render 'layouts/menu'

    - if user_signed_in?  
      = form_with  :url => search_path, :local => true, :method => :get do |f|
        = f.text_field :q, :type => "text", :placeholder => "Search...", :id => "search", :data => {:behavior => "autocomplete"}

      

    - if user_signed_in?
      %div.login-buttons
        %div.navbutton{:data => {:link => dishes_path}}
          = link_to 'Dish List', dishes_path 
        %div.navbutton{:data => {:link => new_order_path}}
          = link_to 'New Order', new_order_path
        %div.navbutton{:data => {:link => orders_path}}
          = link_to 'Show Orders', orders_path      
    - else
      %div.login-buttons
        %div.navbutton{:data => {:link => new_user_session_path}}
          = link_to 'Log in', new_user_session_path
        %div.navbutton{:data => {:link => new_user_registration_path}}
          = link_to 'Sign up', new_user_registration_path