%h1 Employees
%div.user-list
	- @users.each do |user|
		- if current_user.id != user.id
			%div.user-thumb{:data => {:link => user_path(user)}}
				= image_tag user.user_avatar, :class => "avatar", :data => {:link => user_path(user)}
				%div.username
					- if user.admin?
						= image_tag 'admin.png', :class => "admin-tag", :alt => "Admin"
					= link_to user.name, user_path(user)
				%div#admin-buttons
					= link_to 'Delete', admin_destroy_user_path(user), :id => "delete-link", method: :delete, data: {confirm: "Are you sure you want to delete #{user.name}?"}
