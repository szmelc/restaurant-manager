= content_for :title, "Arbejder | Dodaj komentarz"
%div#post-show
	%div.post
		= image_tag @post.author_avatar, :class => 'post-avatar', :class => 'post-avatar', :data => {:link => user_path(@post.user_id)}
		%div.content
			%div.author-name
				%p= @post.author
				%p= @post.date
			%div.post-content
				%p= @post.content
	%div#comments
		= render @post.comments
= render 'comments/form', :id => 'new-comment'
