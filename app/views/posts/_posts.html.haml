- @posts.each do |post|
	%div.post
		= image_tag post.author_avatar, :class => 'post-avatar'
		%div.content
			%div.author-name
				= link_to post.author, user_path(post.user_id)
				%p= post.date
			%div.post-content
				%p= post.content
			%p.comment-count 
				Komentarzy:	
				= post.comments.count	
				|
				= link_to 'Skomentuj', new_post_comment_path(post)
