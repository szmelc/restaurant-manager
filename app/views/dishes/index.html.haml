= content_for :title, "Arbejder | Lista DaÅ„" 
%div#dishes
	%div#dish-list
		%table
			- @categories.each do |category|
				%tr
					%th{:colspan => "2", :class => :tableheader}= category 
					%tr
						%th Nazwa
						%th Cena
					- @dishes.each do |dish|
						- if dish.category == category
							%tr
								%td= link_to dish.name, dish_path(dish), {:remote => true, :class => 'dish-link', :data => {:link => dish_path(dish)}}
								%td= dish.price
		- if can? :manage, @dishes
			%tr#last
				%td{:colspan => "3"}
					= link_to '+', new_dish_path, {:id => "add-dish"}
	%div#dish-view
		%div#card
			= image_tag 'dish.svg'
			%h1 Restauracja 'Asia House'
	