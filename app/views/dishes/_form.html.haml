%div#form-div
	= simple_form_for @dish, :html => {:id => 'dish-form'} do |f|
		%div.form-inputs
			= f.label :name, 'Name'
			= f.input :name, label: false
			= f.label :price, 'Price' # verify if it's an integer
			= f.input :price, label: false
			= f.label :description, 'Description'
			= f.text_area :description, label: false
			= f.label :category, 'Category'
			= f.select :category, @categories
			= f.label :image, 'Picture'
			= f.input :image, as: :file, label: false
			= f.submit 'Save changes'