%div#card
	%div#dish
		%div#dish-header
			= image_tag @dish.dish_image, {:class => 'meal-image'}
			%div#dish-name
				%h2= @dish.name
		%p= @dish.description
	- if can? :manage, @dish
		%div#buttons
			= link_to 'Edit', edit_dish_path, {:id => "edit-dish"}
			= link_to 'Delete', dish_path, method: :delete, :id => "delete-dish", :data => {:confirm => "Are you sure you want to delete the dish?"}
